<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Use the following property to set your preferred r2modman profile -->
    <Profile>modding</Profile>

    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <DebugType>None</DebugType>
    <AssemblyName>$(SolutionName)</AssemblyName>
    <RootNamespace>$(SolutionName)</RootNamespace>

    <BepInEx_Test>$(AppData)\r2modmanPlus-local\GTFO\profiles\$(Profile)\BepInEx</BepInEx_Test>

    <Deps>$(SolutionDir)\deps</Deps>
    <BepInEx>$(Deps)\BepInEx-BepInExPack_GTFO-3.2.1\BepInExPack_GTFO\BepInEx</BepInEx>

    <Plugins>$(BepInEx)\plugins</Plugins>
    <BuildDirectory>$(BepInEx)\plugins\$(SolutionName)\</BuildDirectory>


    <OutputPath>$(SolutionDir)\build</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <!-- Older mod usage -->
    <!--<Reference Include="$(BepInEx)\core\0Harmony.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\core\BepInEx.Core.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\core\BepInEx.Unity.IL2CPP.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\core\Il2CppInterop.Common.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\core\Il2CppInterop.Runtime.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\core\MonoMod.RuntimeDetour.dll" Private="false" />-->
    <!--<Reference Include="$(BepInEx)\interop\*.dll" Private="false" />-->

    <!-- BepInEx -->
    <Reference Include="$(BepInEx)\core\BepInEx.Core.dll" Private="false" />
    <Reference Include="$(BepInEx)\core\BepInEx.Unity.IL2CPP.dll" Private="false" />

    <Compile Remove="Blocks\**" />
    <EmbeddedResource Remove="Blocks\**" />
    <None Remove="Blocks\**" />
    <Reference Remove="$(BepInEx)\interop\netstandard.dll" />

    <!-- NuGet Packages -->
    <PackageReference Include="HarmonyX" Version="2.10.2" />
    <PackageReference Include="Il2CppInterop.Common" Version="1.4.5" />
    <PackageReference Include="Il2CppInterop.Runtime" Version="1.4.5" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="echo &quot;hi&quot;" />
    
    <Delete Files="$(OutputPath)$(AssemblyName).deps.json" />

    <Copy SourceFiles="$(SolutionDir)\manifest.json" DestinationFolder="$(OutputPath)" />
    <Copy SourceFiles="$(SolutionDir)\icon.png" DestinationFolder="$(OutputPath)" />
    <Copy SourceFiles="$(SolutionDir)\README.md" DestinationFolder="$(OutputPath)" />
  </Target>
</Project>
